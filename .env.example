# Configuración de la aplicación
APP_NAME="SEA"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8081

# Configuración de idioma
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Configuración de logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Configuración de base de datos
# Para desarrollo local con XAMPP/MySQL
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=sea
DB_USERNAME=root
DB_PASSWORD=

# Para desarrollo con SQLite (alternativa)
# DB_CONNECTION=sqlite
# DB_DATABASE=database/database.sqlite

# Configuración de sesiones
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Configuración de broadcasting y colas
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Configuración de caché
CACHE_STORE=database
CACHE_PREFIX=

# Configuración de Redis (opcional)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Configuración de correo
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@edutrack.local"
MAIL_FROM_NAME="${APP_NAME}"

# Configuración de AWS (si se usa en producción)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Configuración de Vite
VITE_APP_NAME="${APP_NAME}"

# Configuraciones adicionales para desarrollo
# Memoria PHP para procesos grandes
MEMORY_LIMIT=512M

# Configuración de timezone
APP_TIMEZONE=America/Argentina/Buenos_Aires
